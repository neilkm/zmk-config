/ {
    /* Tap-hold and related behaviors */
    behaviors {
        // Home row mods
        hrm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;

            flavor = "tap-preferred";
            tapping-term-ms = <HOME_MODS>;
            quick-tap-ms = <0>;

            // hold behavior, tap behavior
            bindings = <&kp>, <&kp>;
        };

        // Index finger shift mod
        ishft: index_shift_mod {
            compatible = "zmk,behavior-hold-tap";
            label = "INDEX_SHIFT";
            #binding-cells = <2>;

            flavor = "tap-preferred";
            tapping-term-ms = <INDEX_MODS>;
            quick-tap-ms = <0>;

            bindings = <&kp>, <&kp>;
        };

        // Thumb layer-tap
        thlt: thumb_layer_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "THUMB_LAYER_TAP";
            #binding-cells = <2>;

            flavor = "tap-preferred";
            tapping-term-ms = <THUMB_MODS>;
            quick-tap-ms = <0>;

            // hold = &mo (layer), tap = &kp (key)
            bindings = <&mo>, <&kp>;
        };
    };

    chosen {
        // Use the 5-column Corne physical layout instead of the default 6-col
        zmk,physical-layout = &foostan_corne_5col_layout;
    };

#ifdef REV2
    keymap {
        compatible = "zmk,keymap";

        alpha_layer { // 0
            display-name = "Base";
            bindings = <
           /*top row*/   &kp Q &kp W &kp E &kp R &kp T       /**/ &kp Y &kp U &kp I &kp O &kp P
           /*middle row*/&hrm LCTL A &hrm LGUI S &hrm LALT D &ishft LSHIFT F &kp G /**/
                        &kp H &ishft RSHIFT J &hrm RALT K &hrm RGUI L &hrm RCTL SEMI
           /*bottom row*/&kp Z &kp X &kp C &kp V &kp B       /**/ &kp N &kp M &kp COMMA &kp DOT &kp FSLH
           /*thumb row*/ &thlt 7 TAB &thlt 4 DEL &thlt 2 RET /**/ &thlt 1 SPACE &thlt 3 BSPC &thlt 5 ESCAPE 
            >;
        };

        nav_layer { // 1
            display-name = "Nav";
            bindings = <
           /*top row*/   &trans &trans &trans &kp NEIL_PRINT &kp NEIL_CUT   /**/ &kp INS &kp HOME &kp UP &kp END &trans
