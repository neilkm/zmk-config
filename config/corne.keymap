// Tap hold timings (ms):
#define INDEX_MODS 200
#define HOME_MODS 275
#define THUMB_MODS 250 

// Cursor movement speed (pixels per tick-ish)
#define CURSOR_STEP 600

// Mouse move directions (pointer)
// For &mmv, positive Y is down, negative Y is up.
#define CURSOR_UP_FAST    MOVE_Y(-CURSOR_STEP)
#define CURSOR_DOWN_FAST  MOVE_Y(CURSOR_STEP)
#define CURSOR_LEFT_FAST  MOVE_X(-CURSOR_STEP)
#define CURSOR_RIGHT_FAST MOVE_X(CURSOR_STEP)

// Scroll speed (wheel units per tick-ish)
#define SCRL_STEP 75

// Mouse scroll directions
// For &msc, positive Y is up, negative Y is down.
#define SCRL_UP_FAST      MOVE_Y(SCRL_STEP)
#define SCRL_DOWN_FAST    MOVE_Y(-SCRL_STEP)
#define SCRL_LEFT_FAST    MOVE_X(-SCRL_STEP)
#define SCRL_RIGHT_FAST   MOVE_X(SCRL_STEP)

// macro defines
#define LEADER1 COLON // vim leader
#define LEADER2 LC(B) // tmux leader
#define NEIL_COPY C_AC_COPY
#define NEIL_CUT C_AC_CUT
#define NEIL_PRINT C_AC_PRINT
#define NEIL_PASTE C_AC_PASTE
#define NEIL_UNDO C_AC_UNDO
#define NEIL_REDO C_AC_REDO
#define NEIL_REFRESH C_AC_REFRESH

