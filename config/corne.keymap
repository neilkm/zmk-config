        };

        sym_layer { // 3
            display-name = "Symbol";
            bindings = <
           /*top row*/   &trans &kp EQUAL &kp UNDER &kp QMARK &kp SQT /**/ &kp DQT &kp PIPE &kp MINUS &kp PLUS &trans
           /*middle row*/&trans &kp LT    &kp LBRC  &kp LBKT  &kp LPAR /**/ &kp RPAR &kp RBKT &kp RBRC &kp GT &trans
           /*bottom row*/&trans &trans &kp GRAVE &kp FSLH &kp SEMI   /**/ &kp COLON &kp BSLH &kp TILDE &trans &trans
           /*thumb row*/ &trans &trans &trans                        /**/ &trans &trans &trans 
            >;
        };

        shortcut_layer { // 4
            display-name = "Shortcut";
            bindings = <
           /*top row*/   &trans &trans &trans &trans &kp NEIL_REFRESH /**/ &kp QUIT &kp FULLSCREEN &kp MOVE_DKTP_UP &trans &trans 
           /*middle row*/&trans &trans &trans &trans &kp NEWBROWSER   /**/ &kp NEWTERM &kp MOVE_DKTP_LF &kp MOVE_DKTP_DN &kp MOVE_DKTP_RT &trans
           /*bottom row*/&trans &trans &trans &trans &kp APPSEARCH    /**/ &kp FILEEXPLORER &kp MINIMIZE &trans &trans &trans
           /*thumb row*/ &trans &trans &trans                         /**/ &trans &trans &trans 
            >;
        }; 

        mouse_layer { // 5
            display-name = "Mouse";
            bindings = <
           /*top row*/   &trans &trans &trans &trans &trans /**/ &kp PG_UP &kp C_AC_BACK &mmv CURSOR_UP_FAST &kp C_AC_FORWARD &trans
           /*middle row*/&kp LCTL &kp LGUI &kp LALT &kp LSHIFT &trans /**/ &kp PG_DN &mmv CURSOR_LEFT_FAST &mmv CURSOR_DOWN_FAST &mmv CURSOR_RIGHT_FAST &mo 6
           /*bottom row*/&trans &trans &trans &trans &trans /**/ &trans &mkp LCLK &mkp MCLK &mkp RCLK &trans
           /*thumb row*/ &trans &trans &trans /**/ &trans &trans &trans 
            >;
        };

        scroll_layer { // 6
            display-name = "Scroll";
            bindings = <
           /*top row*/   &trans &trans &trans &trans &trans /**/ &kp PG_UP &kp C_AC_BACK &msc SCRL_UP_FAST &kp C_AC_FORWARD &trans
           /*middle row*/&kp LCTL &kp LGUI &kp LALT &kp LSHIFT &trans /**/ &kp PG_DN &msc SCRL_LEFT_FAST &msc SCRL_DOWN_FAST &msc SCRL_RIGHT_FAST &mo 6
           /*bottom row*/&trans &trans &trans &trans &trans /**/ &trans &mkp LCLK &mkp MCLK &mkp RCLK &trans
           /*thumb row*/ &trans &trans &trans /**/ &trans &trans &trans 
            >;
        };  

        function_layer { // 7
            display-name = "Function";
            bindings = <
           /*top row*/   &trans &kp F1 &kp F2 &kp F3 &kp F4 /**/ &trans &kp C_VOL_DN &kp C_MUTE &kp C_VOL_UP &trans
           /*middle row*/&trans &kp F5 &kp F6 &kp F7 &kp F8 /**/ &trans &kp C_PREV &kp C_PP &kp C_NEXT &trans 
           /*bottom row*/&trans &kp F9 &kp F10 &kp F11 &kp F12 /**/ &trans &trans &trans &trans &trans
           /*thumb row*/ &trans &trans &trans /**/ &trans &trans &trans 
            >;
        };    
    };
#endif

