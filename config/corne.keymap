/ {
    behaviors {
        // Home row mods
        hrm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;

            flavor = "tap-preferred";
            tapping-term-ms = <HOME_MODS>;
            quick-tap-ms = <0>;

            // hold behavior, tap behavior
            bindings = <&kp>, <&kp>;
        };

        // Index finger shift with shorter tapping term
        ishft: index_shift_mod {
            compatible = "zmk,behavior-hold-tap";
            label = "INDEX_SHIFT";
            #binding-cells = <2>;

            flavor = "tap-preferred";
            tapping-term-ms = <INDEX_MODS>;
            quick-tap-ms = <0>;

            bindings = <&kp>, <&kp>;
        };

        // Thumb layer-tap
        thlt: thumb_layer_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "THUMB_LAYER_TAP";
            #binding-cells = <2>;

            flavor = "tap-preferred";
            tapping-term-ms = <THUMB_MODS>;
            quick-tap-ms = <0>;

            // hold = &mo (layer), tap = &kp (key)
            bindings = <&mo>, <&kp>;
        };
    };
};

/ {
 chosen {
        // Use the 5-column Corne physical layout instead of the default 6-col
        zmk,physical-layout = &foostan_corne_5col_layout;
    };

